---
interface baseProperties {
  title: string;
  excerpt: string;
  cover: string;
  createdAt: string;
  href: string;
}
interface Blog extends baseProperties {
  type: "blog";
  collection: string;
  minutesRead: string;
}

interface Project extends baseProperties {
  type: "project";
  github: string;
  link: string;
}

export type Props = Blog | Project;

const { title, excerpt, cover, createdAt, collection, minutesRead, href, type, github, link } =
  Astro.props;
---

<div>
  <a href={href} tabindex="-1">
    <img
      src={cover}
      alt={title}
      class="aspect-video w-full rounded-lg border border-zinc-200 object-cover shadow-lg dark:border-zinc-600"
    />
  </a>
  <div class="space-y-1 py-1 lg:py-3">
    {
      type === "blog" && (
        <span class="rounded-md bg-blue-200 px-1 py-0.5 text-xs font-semibold text-blue-700 lg:px-2 lg:py-1 lg:text-sm">
          {collection}
        </span>
      )
    }
    <a
      href={href}
      class="block text-2xl font-semibold tracking-tight text-zinc-900 transition-colors active:text-blue-600 dark:text-zinc-200 dark:active:text-blue-400 xl:text-3xl"
    >
      {title}
    </a>
    {
      type === "project" && (
        <div class="flex items-center gap-2 text-sm font-medium text-zinc-600 dark:text-zinc-400 lg:gap-4 lg:text-base">
          {link.length > 0 && (
            <a
              href={link}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex items-center gap-1 text-zinc-600 dark:text-zinc-400"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="h-4 w-4 transition-colors group-hover:text-blue-600 dark:group-hover:text-blue-400 lg:h-5 lg:w-5"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244"
                />
              </svg>
              <span class="decoration-blue-600 underline-offset-4 group-hover:underline dark:decoration-blue-400">
                Project Link
              </span>
            </a>
          )}
          {github.length > 0 && (
            <a
              href={github}
              target="_blank"
              rel="noopener noreferrer"
              class="group flex items-center gap-1 text-zinc-600 dark:text-zinc-400"
            >
              <>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="currentColor"
                  viewBox="0 0 1024 1024"
                  stroke-width="0"
                  stroke="currentColor"
                  class="h-5 w-5 transition-colors group-hover:text-blue-600 dark:group-hover:text-blue-400 lg:h-6 lg:w-6"
                >
                  <path d="M511.6 76.3C264.3 76.2 64 276.4 64 523.5 64 718.9 189.3 885 363.8 946c23.5 5.9 19.9-10.8 19.9-22.2v-77.5c-135.7 15.9-141.2-73.9-150.3-88.9C215 726 171.5 718 184.5 703c30.9-15.9 62.4 4 98.9 57.9 26.4 39.1 77.9 32.5 104 26 5.7-23.5 17.9-44.5 34.7-60.8-140.6-25.2-199.2-111-199.2-213 0-49.5 16.3-95 48.3-131.7-20.4-60.5 1.9-112.3 4.9-120 58.1-5.2 118.5 41.6 123.2 45.3 33-8.9 70.7-13.6 112.9-13.6 42.4 0 80.2 4.9 113.5 13.9 11.3-8.6 67.3-48.8 121.3-43.9 2.9 7.7 24.7 58.3 5.5 118 32.4 36.8 48.9 82.7 48.9 132.3 0 102.2-59 188.1-200 212.9a127.5 127.5 0 0 1 38.1 91v112.5c.8 9 0 17.9 15 17.9 177.1-59.7 304.6-227 304.6-424.1 0-247.2-200.4-447.3-447.5-447.3z" />
                </svg>
                <span class="decoration-blue-600 underline-offset-4 group-hover:underline dark:decoration-blue-400">
                  GitHub
                </span>
              </>
            </a>
          )}
        </div>
      )
    }
    <p class="prose prose-zinc dark:prose-invert lg:prose-lg">
      {excerpt}
    </p>
    <p class="text-sm font-light text-zinc-600 dark:text-zinc-400 lg:text-base">
      <span>
        Published on {createdAt}
      </span>
      {
        type === "blog" && (
          <span>
            <span>&bull;</span>
            <span>{minutesRead}</span>
          </span>
        )
      }
    </p>
  </div>
</div>
