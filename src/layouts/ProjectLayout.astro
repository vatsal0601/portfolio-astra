---
import Head from "@components/Head.astro";
import Navbar from "@components/Navbar.astro";
import Footer from "@components/Footer.astro";

interface Frontmatter {
  title: string;
  excerpt: string;
  cover: string;
  createdAt: string;
  keywords: string;
  github: string;
  link: string;
}

export interface Props {
  frontmatter: Frontmatter;
}

const {
  frontmatter: { title, excerpt, cover, createdAt, keywords, github, link },
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="h-full scroll-smooth">
  <Head
    title={title}
    description={excerpt}
    keywords={keywords}
    image={`https://vatsalsakariya.vercel.app${cover}`}
  />
  <body
    class="flex min-h-full flex-col bg-white subpixel-antialiased transition-colors animate-in fade-in duration-300 dark:bg-zinc-900"
  >
    <header class="print:hidden">
      <Navbar />
    </header>
    <main class="container py-12 lg:py-24">
      <p class="mx-auto mb-2 max-w-prose lg:mb-4 lg:text-lg">
        <span
          class="border-l-2 border-zinc-200 pl-2 text-sm font-light text-zinc-600 dark:border-zinc-600 dark:text-zinc-400 lg:text-base"
        >
          {createdAt}
        </span>
      </p>
      <article
        class="prose prose-zinc mx-auto prose-a:font-medium prose-a:decoration-blue-600 prose-a:underline-offset-4 hover:prose-a:decoration-2 prose-pre:rounded-lg prose-img:aspect-video prose-img:w-full prose-img:rounded-lg prose-img:object-cover dark:prose-invert dark:prose-a:decoration-blue-400 lg:prose-lg"
      >
        <section>
          <h1 class="text-blue-600 dark:text-blue-400">
            {title}
          </h1>
          <p>
            {excerpt}
          </p>
          <div class="flex items-center gap-4 lg:gap-8">
            {
              link.length > 0 && (
                <a
                  href={link}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group flex items-center gap-2"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="currentColor"
                    class="h-4 w-4 transition-colors group-hover:text-blue-600 dark:group-hover:text-blue-400 lg:h-5 lg:w-5"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d="M13.19 8.688a4.5 4.5 0 011.242 7.244l-4.5 4.5a4.5 4.5 0 01-6.364-6.364l1.757-1.757m13.35-.622l1.757-1.757a4.5 4.5 0 00-6.364-6.364l-4.5 4.5a4.5 4.5 0 001.242 7.244"
                    />
                  </svg>
                  <span>Project Link</span>
                </a>
              )
            }
            {
              github.length > 0 && (
                <a
                  href={github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="group flex items-center gap-2"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    fill="currentColor"
                    viewBox="0 0 1024 1024"
                    stroke-width="0"
                    stroke="currentColor"
                    class="h-5 w-5 transition-colors group-hover:text-blue-600 dark:group-hover:text-blue-400 lg:h-6 lg:w-6"
                  >
                    <path d="M511.6 76.3C264.3 76.2 64 276.4 64 523.5 64 718.9 189.3 885 363.8 946c23.5 5.9 19.9-10.8 19.9-22.2v-77.5c-135.7 15.9-141.2-73.9-150.3-88.9C215 726 171.5 718 184.5 703c30.9-15.9 62.4 4 98.9 57.9 26.4 39.1 77.9 32.5 104 26 5.7-23.5 17.9-44.5 34.7-60.8-140.6-25.2-199.2-111-199.2-213 0-49.5 16.3-95 48.3-131.7-20.4-60.5 1.9-112.3 4.9-120 58.1-5.2 118.5 41.6 123.2 45.3 33-8.9 70.7-13.6 112.9-13.6 42.4 0 80.2 4.9 113.5 13.9 11.3-8.6 67.3-48.8 121.3-43.9 2.9 7.7 24.7 58.3 5.5 118 32.4 36.8 48.9 82.7 48.9 132.3 0 102.2-59 188.1-200 212.9a127.5 127.5 0 0 1 38.1 91v112.5c.8 9 0 17.9 15 17.9 177.1-59.7 304.6-227 304.6-424.1 0-247.2-200.4-447.3-447.5-447.3z" />
                  </svg>
                  <span>GitHub</span>
                </a>
              )
            }
          </div>
        </section>
        <img
          src={cover}
          alt={title}
          class="border border-zinc-200 shadow-lg dark:border-zinc-600"
        />
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
